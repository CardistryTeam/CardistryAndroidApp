<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nikolay.shuffledex.practice.efficiency.EfficiencyPracticePlayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentFlourish"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="currentFlourish" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView5"
        android:layout_below="@+id/currentFlourish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentStreak"
        android:text="cs"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/streakCount"
        android:text="sc"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fail"
        android:id="@+id/failButton"
        android:onClick="onFailButtonClick"
        android:layout_alignTop="@+id/successButton"
        android:layout_toLeftOf="@+id/currentStreak"
        android:layout_toStartOf="@+id/currentStreak" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:id="@+id/successButton"
        android:onClick="onSuccessButtonClick"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/streakCount"
        android:layout_toEndOf="@+id/streakCount" />

</RelativeLayout>
