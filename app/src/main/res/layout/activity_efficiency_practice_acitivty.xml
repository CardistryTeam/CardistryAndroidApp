<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikolay.shuffledex.practice.efficiency.EfficiencyPracticeAcitivty"
    android:background="@drawable/practice_mode_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="@drawable/text2_practice" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:background="@drawable/text1_practice"
        android:layout_below="@+id/streakPicker"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/flourishes"
        android:background="@drawable/flourishes_button"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="showFlourishPicker"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:background="@drawable/go"
        android:layout_below="@+id/flourishes"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <NumberPicker
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/streakPicker"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/shuffl"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/flourishes"
        android:layout_alignStart="@+id/flourishes"
        android:layout_marginTop="17dp"
        android:background="@drawable/shffl"
        android:onClick="displayAnswer"/>

</RelativeLayout>
