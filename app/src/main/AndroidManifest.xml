<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikolay.shuffledex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SurvivalModeActivity"
            android:label="@string/title_activity_survival_mode" >
        </activity>
        <activity
            android:name=".VersusModeActivity"
            android:label="@string/title_activity_versus_mode" >
        </activity>
        <activity
            android:name=".PracticeModeActivity"
            android:label="@string/title_activity_practice_mode" >
        </activity>
        <activity
            android:name=".ScoreboardActivity"
            android:label="@string/title_activity_scoreboard" >
        </activity>
        <activity
            android:name=".FlowgraphActivity"
            android:label="@string/title_activity_flowgraph" >
        </activity>
    </application>

</manifest>
